@model Oninon.Web.Services.ProductDto

@{
    ViewData["Title"] = "ویرایش";
}


<div class="row">
<div class="col">
    <div class="card shadow">
        <div class="card-header border-0">

            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">ویرایش محصول</h3>
                </div>

            </div>
        </div>
        <form asp-action="Update">
            <input hidden="" asp-for="Id" class="form-control" />
            <input hidden="" asp-for="DateCreated" class="form-control" />
          
            <div class="form-group col-8">
                <label asp-for="Name" class="control-label">نام</label>
                <input asp-for="Name" class="form-control" />
              
            </div>
            <div class="form-group col-8">
                <label asp-for="Description" class="control-label">توضیحات</label>
                <input asp-for="Description" class="form-control" />
             
            </div>
            <div class="form-group col-8">
                <label asp-for="Price" class="control-label">قیمت</label>
                <input asp-for="Price" class="form-control" />
              
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
